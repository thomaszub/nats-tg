{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "LimitChangedEvent",
  "title": "Limit Changed Event",
  "description": "Event that the limit of a banking account is changed",
  "type": "object",
  "properties": {
    "accountId": {
      "description": "The unique id of the banking account",
      "type": "string",
      "format": "uuid"
    },
    "limit": {
      "description": "The new limit",
      "type": "number",
      "minimum": 0
    }
  },
  "required": ["accountId", "limit"]
}
